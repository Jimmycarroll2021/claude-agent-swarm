# Claude Agent Swarm Environment Configuration

# =============================================================================
# API Keys
# =============================================================================

# Anthropic API Key (Required)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Brave Search API Key (for web search tool)
# Get yours at: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# Optional: Serper.dev API Key (alternative web search)
# Get yours at: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# Model Configuration
# =============================================================================

# Default model for orchestrator
DEFAULT_ORCHESTRATOR_MODEL=claude-3-7-sonnet-20250219

# Default model for sub-agents
DEFAULT_AGENT_MODEL=claude-3-7-sonnet-20250219

# Optional: Use Claude Opus for complex tasks
# COMPLEX_TASK_MODEL=claude-opus-4-20250514

# =============================================================================
# Swarm Configuration
# =============================================================================

# Maximum number of agents in a swarm
MAX_AGENTS=100

# Maximum parallel agents (concurrency limit)
MAX_PARALLEL_AGENTS=10

# Default timeout for agent tasks (seconds)
DEFAULT_AGENT_TIMEOUT=300

# Enable telemetry collection
ENABLE_TELEMETRY=true

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Path to MCP server configuration file
MCP_CONFIG_PATH=configs/mcp_servers.json

# Example MCP servers (JSON format)
# MCP_SERVERS={
#   "brave-search": {
#     "command": "npx",
#     "args": ["-y", "@modelcontextprotocol/server-brave-search"],
#     "env": {"BRAVE_API_KEY": "${BRAVE_API_KEY}"}
#   },
#   "filesystem": {
#     "command": "npx",
#     "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/user/data"]
#   }
# }

# =============================================================================
# State Management
# =============================================================================

# State backend: sqlite, redis, or memory
STATE_BACKEND=sqlite

# SQLite database path (for sqlite backend)
SQLITE_DB_PATH=data/swarm_state.db

# Redis URL (for redis backend)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARN, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Log file path (optional)
# LOG_FILE=logs/swarm.log

# =============================================================================
# Dashboard
# =============================================================================

# Enable terminal dashboard
ENABLE_DASHBOARD=true

# Dashboard refresh rate (seconds)
DASHBOARD_REFRESH_RATE=1.0

# =============================================================================
# Rate Limiting
# =============================================================================

# Anthropic API rate limit (requests per minute)
ANTHROPIC_RATE_LIMIT=60

# Enable rate limiter
ENABLE_RATE_LIMITER=true

# =============================================================================
# Security
# =============================================================================

# Allowed paths for file operations (comma-separated)
ALLOWED_PATHS=/mnt/okcomputer,/tmp

# Block symbolic links in file operations
BLOCK_SYMLINKS=true

# Maximum file size for operations (bytes)
MAX_FILE_SIZE=10485760

# =============================================================================
# Development
# =============================================================================

# Enable debug mode
DEBUG=false

# Test mode (disables actual API calls)
TEST_MODE=false
